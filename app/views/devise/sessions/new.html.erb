<div class="container">
  <div class="container-fluid my-5 row">
    <div class="banner-margin col-12 col-md-12 col-lg-8 col-xl-6">
      <div class="bg-white rounded p-3 box-shadow">
        <div class="banner-login">
          <img src="https://res.cloudinary.com/dgzbf6kp2/image/upload/v1652726295/development/sign-in_hythsa.jpg" alt="ilustracion-sesion">
        </div>
        <h2 class="text-center text-shadow my-3">Inicia Sesión</h2>

       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :floating_labels_form, wrapper_mappings: {
    select: :floating_labels_select}) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        label: "Correo Electronico",
                        placeholder: "Ingresar Email",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: "Contraseña",
                        placeholder: "Ingrese Contraseña",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
