<div class="container py-5 my-5">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 class="text-shadow">Edit Place, Just Admin!</h3>
        <%= simple_form_for @place do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :rating %>
          <%= f.input :city, as: :select, collection: @cities %>
          <%= f.input :recomendation %>
          <%= f.input :other_recomendation %>
          <%= f.input :what_to_bring %>
          <%= f.input :how_to_get %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
