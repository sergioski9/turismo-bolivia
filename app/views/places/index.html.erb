<article id="index the place">
  <section>
    <div class="container text-center text-shadow my-5">
      <h2><strong>¡Escoge el Lugar que más te guste! </strong></h2>
      <p><small><em class="text-muted">¡Presiona la imagen para ver toda su informacion!</em></small></p>
    </div>
    <div class="container-fluid my-5">
      <div class="row justify-content-center">
        <% if params[:city].present? %>
          <% @city.each do |place| %>
            <div class="text-none col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4" data-aos="fade-up" data-aos-duration="2000">
              <%= link_to place_path(place) do %>
                <div class="box-shadow card-places my-4">
                  <div class="card-category-place" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path place.photos.first.key %>')">
                    <div>
                      <% place.rating.to_i.times do %>
                        <i class="fas fa-star star-yellow"></i>
                      <% end %>
                      <h3 class="text-shadow"><strong><%= place.name.first(20) %>...</strong></h3>
                      <h5 class="text-shadow"><strong><%= place.city %></strong></h5>
                      <p><%= place.description.first(90) %>...</p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <% @places.each do |place| %>
            <div class="text-none col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4" data-aos="fade-up" data-aos-duration="2000">
              <%= link_to place_path(place) do %>
                <div class="box-shadow card-places my-4">
                  <div class="card-category-place" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path place.photos.first.key %>')">
                    <div class="text-shadow">
                      <div class="color-white">
                        <h3 class=""><strong><%= place.name.first(20) %>...</strong></h3>
                        <% place.rating.to_i.times do %>
                          <i class="fas fa-star star-yellow"></i>
                        <% end %>
                      </div>
                      <h5 class="text-shadow"><strong><%= place.city %></strong></h5>
                      <p><%= place.description.first(90) %>...</p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
</article>
